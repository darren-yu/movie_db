<!DOCTYPE html>
<html>
	<script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
	<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" rel="stylesheet">
	<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
	<link href="/style.css" rel="stylesheet" type="text/css">
	<script src="/script.js" type="text/javascript"></script>

<head>
	<title>Comments Page</title>
</head>
<body>

	<nav class="navbar navbar-default" role="navigation">
  		<div class="container-fluid">
   			 	<ul>
   			 		<h4 class="navbar-left">Media For Reel</h4>
   			 		<button type="button" class="navbtn btn btn-default navbar-right"><a href="/">New Search</a></button>
   			 		<button type="button" class="navbtn btn btn-default navbar-right"><a href="/added">Watch List</a></button>
      			</ul>
  		</div>
	</nav>

	<div class="container">

		<div class="row">

			<div class="comments col-md-12 col-sm-12 text-left">
			
				<form action="/added/<%=watchlistNum%>/comments" method="post">
					<div class="form-group">
						<label for="form-control">Comments for title:</label>
						<textarea class="form-control" name="comment" rows="4"></textarea>
						<input type="hidden" name="watchListId" value="<%=watchlistNum%>">
					</div>
					<button type="submit" class="btn btn-default">Submit</button>
				</form>

			<br>
			<table class="table table-striped" border="4">
	
			  		<tr>
  						<th>Comments about title</th>
  					</tr>
  				
  				<!-- looping over only the elements and not the table headers  -->
				<% commentData.forEach(function(element, indexOfArray) { %>
					<% if(parseInt(watchlistNum) === element.watchListId) { %>
					<tr>
						<td>
							<%= element.comment %>
						</td>
					</tr>	
					<% } %>
				<% }) %>


			</table>
					
		</div>

	</div>



</body>
</html>