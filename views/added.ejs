<!DOCTYPE html>
<html>
<head>
	<script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
	<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" rel="stylesheet">
	<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
	<link href="/style.css" rel="stylesheet" type="text/css">
	<script src="/script.js" type="text/javascript"></script>

	<title>Added!</title>
</head>
<body>
	<nav class="navbar navbar-default" role="navigation">
  		<div class="container-fluid">
   			 	<ul>
   			 		<h4 class="navbar-left">Media For Reel</h4>
   			 		<button type="button" class="navbtn btn btn-default navbar-right"><a href="/">New Search</a></button>
   			 		<button type="button" class="navbtn btn btn-default navbar-right"><a href="/added">Watch List</a></button>
      			</ul>
  		</div>
	</nav>

	<div class="container">
		<div class="row">
			<div class="added col-md-12 col-sm-12 text-left">
		
				<h3>Your Watch lists..</h3>
			
				<table class="table table-striped" border="4">
	
			  		<tr>
    					<th>Title</th>
    					<th>Year</th> 
    					<th>IMDB Code</th>
    					<th></th>
    					<th></th>
  					</tr>

  				<!-- looping over only the elements and not the table headers  -->
				<% allData.forEach(function(element, indexOfArray) { %>
					<tr>
						<td>
							<%= element.title_name %>
						</td>
				
						<td>
							<%= element.year%>
						</td>
				
						<td>
							<%= element.imdb_code%>
						</td>

						<td>
							<a href="/movies/<%=element.imdb_code%>" class="btn btn-primary btn-sm">More Info</a>
						</td>

						<td>
							<!-- ajax delete button  -->
							<a href="#" data-myparam="<%=element.id%>" class="btn btn-danger btn-sm deleteAdded">Delete</a>
						</td>
					</tr>
				<% }) %>

				</table>
			
			</div>
			</div>		
		</div>
	</div>
</body>
</html>

