<!DOCTYPE html>
<html>
<head>
	<script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
	<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" rel="stylesheet">
	<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
	<link href="style.css" rel="stylesheet" type="text/css">

	<title>Search Results</title>
</head>
<body>	

	<nav class="navbar navbar-default" role="navigation">
  		<div class="container-fluid">
   			 	<ul>
   			 		<h4 class="navbar-left">Media For Reel</h4>
   			 		<button type="button" class="navbtn btn btn-default navbar-right"><a href="/">New Search</a></button>
   			 		<button type="button" class="navbtn btn btn-default navbar-right"><a href="/added">Watch List</a></button>
      			</ul>
  		</div>
	</nav>

	<div class="container">

		<div class="row">

			<div class="results col-md-12 col-sm-12 text-left">
				<h3>Your search results returned the following..</h3>
				<% search.forEach(function(element, indexOfArray) { %>
				<li><a href="/movies/<%=element.imdbID%>"><%= element.Title + " (" + element.Year + ") " + " / " + element.Type   %></a></li>
				<% }) %>
				<% if(search.length < 1){ %>
				<em>Media not found.<em>
				<% } %>
			</div>

		</div>

	</div>

</body>
</html>